<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_temperature_units_titles"
        android:entryValues="@array/pref_temperature_units_values"
        android:key="temperature_unit"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_temperature_unit_title" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_distance_units_titles"
        android:entryValues="@array/pref_distance_units_values"
