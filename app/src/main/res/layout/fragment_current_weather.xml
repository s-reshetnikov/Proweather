<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.currentweather.CurrentWeatherFragment">

    <TextView
        android:id="@+id/tv_week_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/average_margin"
        android:layout_marginTop="@dimen/min_margin"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Monday" />

    <ImageView
        android:id="@+id/img_weather"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginLeft="@dimen/average_margin"
        android:layout_marginStart="@dimen/average_margin"
        android:layout_marginTop="@dimen/min_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_week_day"
        app:srcCompat="@drawable/ic_cloudy_day_24dp" />

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/average_margin"
        android:layout_marginStart="@dimen/average_margin"
        android:textSize="64sp"
        app:layout_constraintLeft_toRightOf="@+id/img_weather"
        app:layout_constraintTop_toTopOf="@+id/img_weather"
        tools:text="240 \u2109" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/coloredLinearGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/zero_margin"
        android:layout_marginLeft="@dimen/zero_margin"
        android:layout_marginRight="@dimen/zero_margin"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/stateRainy"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="@dimen/min_margin"
                android:layout_weight="0.33"
                app:srcCompat="@drawable/ic_state_rainy_24dp"
                android:contentDescription="@string/weather_icon_description" />


            <ImageView
                android:id="@+id/statePrecipitation"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="@dimen/min_margin"
                android:layout_weight="0.33"
                app:srcCompat="@drawable/ic_state_water_drop_24dp" />

            <ImageView
                android:id="@+id/stateWind"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="@dimen/min_margin"
                android:layout_weight="0.33"
                app:srcCompat="@drawable/ic_state_wind_24dp" />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_humidity"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/min_margin"
                android:layout_weight="0.33"
                android:gravity="center"
                android:textColor="@color/colorIconWhite"
                android:textSize="@dimen/icon_value_text_size"
                tools:text="100%" />

            <TextView
                android:id="@+id/tv_precipitation"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_weight="0.34"
                android:gravity="center"
                android:textColor="@color/colorIconWhite"
                android:textSize="@dimen/icon_value_text_size"
                tools:text="100%" />

            <TextView
                android:id="@+id/tv_wind"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/min_margin"
                android:layout_weight="0.33"
                android:gravity="center"
                android:textColor="@color/colorIconWhite"
                android:textSize="@dimen/icon_value_text_size"
                tools:text="37 m/s" />
        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.v7.widget.LinearLayoutCompat>

</android.support.constraint.ConstraintLayout>
