<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDateCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:text="Monday, 23 August" />

            <TextView
                android:id="@+id/tvTemperatureCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDateCard"
                android:padding="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                tools:text="245 \u212A" />

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/humidityData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/pressureData"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/humidity_label" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="80-100%" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/pressureData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivStateWeatherCard"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDateCard"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/pressure_label" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    tools:text="1050 kPa" />
            </android.support.v7.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/ivStateWeatherCard"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvDateCard"
                android:layout_marginBottom="8dp"
                tools:src="@drawable/ic_hard_rain" />

            <View
                android:layout_width="match_parent"
                android:id="@+id/expandedDetailsDivider"
                android:layout_height="1dp"
                android:layout_below="@+id/ivStateWeatherCard"
                android:background="@android:color/darker_gray" />

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/forecastDayTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/expandedDetailsDivider"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvForecastStateMorning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/morning"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvForecastStateDay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/day"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvForecastStateEvening"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/evening"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvForecastStateNight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/night"
                    android:textSize="18sp" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/forecastImageDayTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forecastDayTimeLayout">

                <ImageView
                    android:id="@+id/ivForecastStateMorning"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_weight="0.25"
                    tools:src="@drawable/ic_hard_rain" />

                <ImageView
                    android:id="@+id/ivForecastStateDay"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_weight="0.25"
                    tools:src="@drawable/ic_hard_rain" />

                <ImageView
                    android:id="@+id/ivForecastStateEvening"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_weight="0.25"
                    tools:src="@drawable/ic_hard_rain" />

                <ImageView
                    android:id="@+id/ivForecastStateNight"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_weight="0.25"
                    tools:src="@drawable/ic_hard_rain" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/forecastTemperatureLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forecastImageDayTimeLayout">

                <TextView
                    android:id="@+id/tvForecastTemperatureMorning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:textSize="16sp"
                    tools:text="275 \u212A" />

                <TextView
                    android:id="@+id/tvForecastTemperatureDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:textSize="16sp"
                    tools:text="290 \u212A" />

                <TextView
                    android:id="@+id/tvForecastTemperatureEvening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:textSize="16sp"
                    tools:text="280 \u212A" />

                <TextView
                    android:id="@+id/tvForecastTemperatureNight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:textSize="16sp"
                    tools:text="270 \u212A" />

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/forecastWindDirectionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forecastTemperatureLayout">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.5"
                        android:paddingEnd="3dp"
                        android:paddingRight="3dp"
                        android:scaleType="fitEnd"
                        app:srcCompat="@drawable/ic_compass_24dp" />

                    <TextView
                        android:id="@+id/tvForecastWindDirectionMorning"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:paddingLeft="3dp"
                        android:textSize="16sp"
                        tools:text="N" />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.5"
                        android:paddingEnd="3dp"
                        android:paddingRight="3dp"
                        android:scaleType="fitEnd"
                        app:srcCompat="@drawable/ic_compass_24dp" />

                    <TextView
                        android:id="@+id/tvForecastWindDirectionDay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:paddingLeft="3dp"
                        android:textSize="16sp"
                        tools:text="NE" />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.5"
                        android:paddingEnd="3dp"
                        android:paddingRight="3dp"
                        android:scaleType="fitEnd"
                        app:srcCompat="@drawable/ic_compass_24dp" />

                    <TextView
                        android:id="@+id/tvForecastWindDirectionEvening"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:paddingLeft="3dp"
                        android:textSize="16sp"
                        tools:text="NEE" />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.5"
                        android:paddingEnd="3dp"
                        android:paddingRight="3dp"
                        android:scaleType="fitEnd"
                        app:srcCompat="@drawable/ic_compass_24dp" />

                    <TextView
                        android:id="@+id/tvForecastWindDirectionNight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:paddingLeft="3dp"
                        android:textSize="16sp"
                        tools:text="E" />

                </android.support.v7.widget.LinearLayoutCompat>


            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/forecastWindSpeedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forecastWindDirectionLayout">

                <TextView
                    android:id="@+id/tvForecastWindSpeedMorning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:textSize="12sp"
                    tools:text="155 kmh" />

                <TextView
                    android:id="@+id/tvForecastWindSpeedDay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:textSize="12sp"
                    tools:text="155 kmh" />

                <TextView
                    android:id="@+id/tvForecastWindSpeedEvening"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:textSize="12sp"
                    tools:text="155 kmh" />

                <TextView
                    android:id="@+id/tvForecastWindSpeedNight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:textSize="12sp"
                    tools:text="155 kmh" />

            </android.support.v7.widget.LinearLayoutCompat>

            <ImageButton
                android:id="@+id/ibCollapseCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_expand_more_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.v7.widget.LinearLayoutCompat>