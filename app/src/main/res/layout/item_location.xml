<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_location"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_item_first_symbols"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:background="@drawable/button_circle_background_40dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@color/colorIconWhite"
        android:textSize="24sp"
        tools:text="RU" />

    <TextView
        android:id="@+id/tv_item_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_view_with_image_margin_left"
        android:layout_marginRight="16dp"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16sp"
        tools:text="Location" />

</RelativeLayout>

