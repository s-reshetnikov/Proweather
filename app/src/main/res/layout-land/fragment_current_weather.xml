<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.currentweather.CurrentWeatherFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tv_week_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Monday" />

    <ImageView
        android:id="@+id/img_weather"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_week_day"
        app:srcCompat="@drawable/ic_cloudy_day_24dp" />

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:textSize="64sp"
        app:layout_constraintLeft_toRightOf="@+id/img_weather"
        app:layout_constraintTop_toTopOf="@+id/img_weather"
        tools:text="240 \u2109" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.68" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/coloredLinearGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/stateRainy"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:layout_weight="0.33"
                app:srcCompat="@drawable/ic_state_rainy_24dp"
                tools:layout_editor_absoluteX="396dp"
                tools:layout_editor_absoluteY="16dp" />


            <ImageView
                android:id="@+id/statePrecipitation"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:layout_weight="0.33"
                app:srcCompat="@drawable/ic_state_water_drop_24dp"
                tools:layout_editor_absoluteX="396dp"
                tools:layout_editor_absoluteY="123dp" />

            <ImageView
                android:id="@+id/stateWind"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:layout_weight="0.33"
                app:srcCompat="@drawable/ic_state_wind_24dp"
                tools:layout_editor_absoluteX="400dp"
                tools:layout_editor_absoluteY="231dp" />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0.33"
                android:gravity="center"
                android:textColor="@color/colorIconWhite"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="494dp"
                tools:layout_editor_absoluteY="28dp"
                tools:text="100%" />

            <TextView
                android:id="@+id/tv_precipitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0.33"
                android:gravity="center"
                android:textColor="@color/colorIconWhite"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="464dp"
                tools:layout_editor_absoluteY="82dp"
                tools:text="100 mm" />

            <TextView
                android:id="@+id/tv_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0.33"
                android:gravity="center"
                android:textColor="@color/colorIconWhite"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="483dp"
                tools:layout_editor_absoluteY="161dp"
                tools:text="70 km/h" />
        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.v7.widget.LinearLayoutCompat>

</android.support.constraint.ConstraintLayout>
